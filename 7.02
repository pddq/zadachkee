/*Составить программу печати всех совершенных чисел до 10000.
Совершенным называется число, равное сумме всех своих собственных
делителей. Собственным делителем числа называется всякий его делитель,
отличный от самого числа.
Ответ: 6, 28, 496, 8128*/

#include <iostream>
#include <math.h>
using namespace std;

int main() {
  int x, n;

  for (int i = 1; i <= 10000; i++) {
    n=0;
    for (int j = 2; j <= i; j++) {
      if(i%j==0){
        x = i/j;
        n = n + x;
      }
    }
    if(n==i){
      cout << n << endl;
    }
  }
}
