/*В трехзначном числе х зачеркнули его последнюю цифру. Когда в
оставшемся двузначном числе переставили цифры, а затем приписали к
ним слева последнюю цифру числа х, то получилось число п. По заданному
п найти число х (значение п вводится с клавиатуры, 1 < п < 999, число
единиц в п не равно нулю).*/

#include <iostream>
using namespace std;

int main() {
  int a, a_3, a_2, a_1;

  cin >> a;
  a_1 = a/100;
  a_2=(a/10)%10;
  a_3 = a%10;

  if (a<1 || a>999 || a_1 == 0){
    cout <<"vvedite grugoe chislo"<<endl;
  }

  else{
    a = ((a_3*10)+a_2)*10+a_1;
    cout<<a<<endl;
  }

}
