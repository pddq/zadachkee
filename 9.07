/*Дан двухмерный массив целых чисел. Определить:
а) сумму элементов массива, больших 30;
б) количество нечетных элементов;
в) сумму тех элементов массива, сумма индексов которых равна p (p
вводится с клавиатуры).*/

#include <iostream>
using namespace std;

int main() {
setlocale(LC_ALL, "Russian");

int k, sum_gt_30, q_odd_el, sum_ind_p, p;
k = 3;
sum_gt_30 = 0; //сумма элементов массива, больших 30
q_odd_el = 0; //количество нечетных элементов
sum_ind_p = 0; //сумма элементов, сумма индексов которых равна p

cout<<"p = ";
cin>>p;

int m[k][k] = {{30,31,2},{1,2,33},{0,36,3}};

for(int i = 0; i<k; i++){
	for(int j = 0; j<k; j++){
		if(m[i][j]>30){
			sum_gt_30 = sum_gt_30 + m[i][j];
		}
		if(j%2!=0){
			q_odd_el = q_odd_el + 1;
		}
		if(i+j==p){
			sum_ind_p=sum_ind_p+m[i][j];
		}
		if(j==k-1){
			cout << m[i][j] << endl;
		}
		else {
			if(m[i][j]/10!=0){
				cout <<m[i][j]<<" ";
				}
			else{
				cout <<m[i][j]<<"  ";
			}
		}
	}

}

cout<<"сумма элементов массива, больших 30: "<<sum_gt_30<<endl;
cout<<"количество нечетных элементов: "<<q_odd_el<<endl;
cout<<"сумма элементов, сумма индексов которых равна p: "<<sum_ind_p<<endl;

}
