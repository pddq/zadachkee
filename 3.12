/*В трехзначном числе х зачеркнули его вторую цифру. Когда к
образовавшемуся двузначному числу слева приписали вторую цифру числа
х, то получилось число п. По заданному п найти число х (значение п
вводится с клавиатуры, 10 < п < 999, число десятков в п не равно нулю).*/

#include <iostream>
using namespace std;

int main() {
  int a, a_3, a_2, a_1;

  cin >> a;

  a_2=(a/10)%10;

  if (a<10 || a>999 || a_2 == 0){
    cout <<"vvedite grugoe chislo"<<endl;
  }

  else {
    a_1 = a/100%10;
    a = a-(a_1*100);
    a_2 = a/10%10;
    a_3 = a%10;
    a = (a_2*100)+(a_1*10)+a_3;
    cout<<a<<endl;
  }

}
