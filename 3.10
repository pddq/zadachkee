/*Из трехзначного числа х вычли его последнюю цифру. Когда результат
разделили на 10, а к частному слева приписали последнюю цифру числа х,
то получилось число 237. Найти число х.*/

#include <iostream>
using namespace std;

int main() {
  int a, a_1, a_3;
  a=237;
  a_1 = a/100*100;
  a_3 = a_1/100;
  a = (a - a_1)*10+a_3;

  cout<<a<<endl;
}
