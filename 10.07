/*Дана строка. Определить, какие большие буквы латинского алфавита
встречаются в данной последовательности. Вывести эти буквы без
повторений и в порядке алфавита.*/

#include <iostream>
#include <string>
#include <cctype>

using namespace std;
int main() {

int k, k1, i, j, p;
k=k1=i=j=0;
string s = "jLAACgAhj";
char s1[10] = "";
char ch = 'q';

cout<<"Строка: "<<s<<endl;
//////Большие буковки собираю в другой массив s1///////////
while(s[i]!='\0'){
	if(isupper(s[i])){
		s1[j]=s[i];
		j++;
	}
	i++;
}

cout<<"Все большие буковки: "<<s1<<endl;

i=0;
////////////////Здесь переставляю буковке по алфавиту//////////////////
while(k==0){
	k1=0;
	while(s1[i]!='\0'){
		if((int)s1[i]>(int)s1[i+1] && s1[i+1]!='\0'){
			ch=s1[i];
			s1[i]=s1[i+1];
			s1[i+1]=ch;
			k1=1;	
		}
		i++;
	}
	i=0;
	if(k1==0){
		k=1;
	}
}
cout<<"Буковки по алфавиту: "<<s1<<endl;

i=0;

/////////////Удоляю повторяющиеся символы////////////////////////
while(s1[i]!='\0'){
	j = i+1;
	while(s1[j]!='\0'){
		if(s1[i]==s1[j]){
			p=j;
			while(s1[p]!='\0'){
				s1[p]=s1[p+1];
				p++;
			}
		}
		else{
			j++;
		}
	}
i++;
}

cout<<"Буковки по алфавиту без повторений: "<<s1<<endl;


}

